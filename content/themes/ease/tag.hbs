{{!< default}}

<main class="site-main">

    {{#tag}}
  
    <div class="term-container gh-canvas">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                {{#primary_tag}}
                <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
                {{/primary_tag}}
                <li class="breadcrumb-item breadcrumb-current">{{title}}</li>
    </ul>
        <section class="term">
            <h1 class="term-name">{{name}}</h1>
            {{#if description}}
                <div class="term-description">{{description}}</div>
            {{/if}}
        </section>
    </div>
    {{/tag}}

    <div class="post-feed gh-canvas">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

    {{pagination}}

</main>